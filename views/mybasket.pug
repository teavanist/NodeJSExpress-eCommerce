extends layout

block content
  h1 Active Order # #{CartItems[0].order_id}
  .container 
    p.lead 
    table.table
      thead
        tr
          th(scope='col') Product name
          th(scope='col') Quantity 
          th(scope='col') Unit Price
          th(scope='col') Total
          th(scope='col') 
      tbody
        each cartitem  in CartItems
          tr
            td #{cartitem.product_name}
            td #{cartitem.cart_qty}
            td €#{cartitem.unit_price}
            td €#{cartitem.total_cost}
            td 
              //- button.btn.btn-outline-danger.btn-sm(type='button' title='Remove one quantity') X
              form(action='/shop/basket/mybasket/remove/order/'+CartItems[0].order_id+'/item/'+ cartitem.product_id, method= "post")
                //- input#lname(type='text', name='pid', value= cartitem.product_id, hidden = true)
                input(type='submit', value='X', title='Remove one quantity', class = "button btn btn-outline-danger btn-sm")



    p.lead 
      h3 Grand Total: € #{grand_total}
    p.lead
      a(href=`/shop/checkout/` + CartItems[0].order_id , class='btn btn-info' role ='button') Proceed to Checkout


