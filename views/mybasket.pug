extends layout

block content
  h1 Active Order # #{CartItems[0].order_id}
  .container 
    p.lead 
    table.table
      thead
        tr
          th(scope='col') Product name
          th(scope='col') Quantity 
          th(scope='col') Unit Price
          th(scope='col') Total
          th(scope='col') 
      tbody
        each cartitem  in CartItems
          tr
            td #{cartitem.product_name}
            td #{cartitem.cart_qty}
            td #{cartitem.unit_price}
            td #{cartitem.total_cost}
            td 
              button.btn.btn-outline-danger.btn-sm(type='button' title='Remove one quantity') X


    p.lead 
      h3 Grand Total: â‚¬ #{grand_total}
    p.lead
      a(href=`/shop/checkout/` + CartItems[0].order_id , class='btn btn-info' role ='button') Proceed to Checkout


