doctype html
html
  head
    title Thin Air LTD 
    link(rel='stylesheet' href='/bower_components/bootstrap/dist/css/bootstrap.css' crossorigin='anonymous')
    link(rel='stylesheet' href='/css/style.css')


  body
    nav.navbar.navbar-expand-md.navbar-dark.bg-dark
      a.navbar-brand(href='#') Thin Air LTD
      button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarsExampleDefault', aria-controls='navbarsExampleDefault', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarsExampleDefault.collapse.navbar-collapse
        ul.navbar-nav.mr-auto
          li.nav-item
            a.nav-link(href='/') Home 
          
          if user 
            li.nav-item
              a.nav-link(href='/accounts/logout') 
            li.nav-item
              a.nav-link(href='/accounts/logout') Logout 
          else 
            li.nav-item
              a.nav-link(href='/accounts/login') Login
            li.nav-item
              a.nav-link(href='/accounts/registration') Register
          //-  li.nav-item  uncomment only for troubleshooting along with /allusers route 
          //-   a.nav-link(href='/accounts/allusers') All
        if user 
          button.btn.btn-secondary.my-2.my-sm-0(type='button', disabled='') #{user.first_name} 






    .container
      != messages('message',locals)

      block content
      br 
      hr 
      footer 
        p Copyright &copy; 2020
    script(src='/bower_components/bootstrap/site/docs/4.5/assets/js/vendor/jquery.slim.min.js')
    script(src='/bower_components/bootstrap/dist/js/bootstrap.js')
