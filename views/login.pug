extends layout

block content

   div.text-center.d-flex.justify-content-center.mt-5
        form(class="form-signin" method="POST" action="/accounts/login")
            #error
                if error
                    p.text-danger Error!!!

            - var h1Classes = ['h3', 'mb-3', 'font-weight-normal']
            h1(class=h1Classes) Please sign in

            //-input email
            label( for="inputEmail" class="sr-only") Email address
            input(type="email" name="username" id="inputEmail" class="form-control" placeholder="Email address" required autofocus)
            br

            //-input password
            label(for="inputPassword" class="sr-only") Password
            input(type="password" name="password" id="inputPassword" class="form-control" placeholder="Password" required)
            br


            //-signIn button
            - var buttonClass=['btn', 'btn-sm', 'btn-primary', 'btn-block'];
            button(class=buttonClass type="submit") Sign in

            //-Reset password
            p.font-weight-light.pt-2
                | Forgot your password assword? 
                a(href='/accounts/password-reset') Reset here
